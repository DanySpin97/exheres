require github [ user='FedeDP' ] cmake [ api=2 ] 66-service

export_exlib_phases src_install

SUMMARY="A linux bus interface that lets you change screen brightness."

LICENCES="GPL-3"
SLOT="0"
MYOPTIONS="
    ddcutil
    dpms
    gamma
    idle
    ( providers: elogind systemd ) [[ number-selected = exactly-one ]]
    ( providers: eudev systemd ) [[ number-selected = exactly-one ]]
"

DEPENDENCIES="
    build:
        sys-auth/polkit:=
    build+run:
        dev-libs/libmodule[>=4.0.0]
        providers:elogind? (
            sys-auth/elogind
        )
        providers:eudev? (
            sys-apps/eudev
        )
        providers:systemd? (
            sys-apps/systemd
        )
        ddcutil? (
            sys-apps/ddcutil
        )
        dpms? (
            x11-libs/libX11
            x11-libs/libXext
        )
        gamma? (
            x11-libs/libX11
            x11-libs/libXrandr
        )
        idle? (
            x11-libs/libX11
            x11-libs/libXScrnSaver
        )
    run:
        sys-apps/upower
"

CMAKE_SRC_CONFIGURE_OPTION_ENABLES=(
    'ddcutil DDC'
    'dpms DPMS'
    'gamma GAMMA'
    'idle IDLE'
)

Clightd_src_install() {
    default

    install_66_files
}

