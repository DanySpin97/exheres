require python [ blacklist=none with_opt=true ]
require github [ user='nsf' tag=v${PV} ] waf

SUMMARY="Library for writing text-based user interfaces"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"

MYOPTIONS=""

DEPENDENCIES=""

WAF_SRC_INSTALL_PARAMS=( --targets=${PN}_shared )

src_install(){
    waf_src_install
    for abi in ${PYTHON_ABIS}; do
        edo python${abi} setup.py install \
            --root="${IMAGE}" \
            --prefix=/usr/$(exhost --target)
    done
}

RESTRICT="test"

